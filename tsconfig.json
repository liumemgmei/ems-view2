{
  "compilerOptions": {
    "allowJs": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "target": "es6",
    "strict": false,
    "noEmit": true,
    "noImplicitAny": false,
    "module": "esnext"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
